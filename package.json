{
  "name": "intro-joiner",
  "version": "1.0.1",
  "description": "批量把片头与多个正片拼接为成品视频（离线桌面版）",
  "author": "You",
  "license": "MIT",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.yourcompany.introjoiner",
    "productName": "IntroJoiner",
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "asar": true,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "artifactName": "IntroJoiner-${version}-Setup.${ext}"
    },
    "directories": {
      "output": "dist"
    }
  },
  "dependencies": {
    "electron-updater": "^6.1.8",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "execa": "^8.0.1"
  },
  "devDependencies": {
    "electron": "^31.2.0",
    "electron-builder": "^24.13.3"
  }
}